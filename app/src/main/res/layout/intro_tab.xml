<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tab_card_view"
        android:layout_width="@dimen/card_width"
        android:layout_height="@dimen/card_height"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout style="@style/IntroTitle">

                <ImageView
                    android:id="@+id/intro_tab_icon"
                    style="@style/List.Icon.Dense"
                    android:src="@drawable/ic_lock_outline_white_24dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/intro_tab_title"
                    style="@style/List.Content"
                    android:textAppearance="@style/TextAppearance.Primary.Light" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_margin">

                <TextView
                    android:id="@+id/intro_tab_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textAppearance="@style/TextAppearance.Primary" />

                <FrameLayout
                    android:id="@+id/introTabView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/intro_tab_msg"
                    android:paddingTop="@dimen/card_margin" />

                <ImageButton
                    android:id="@+id/intro_icon_button_left"
                    style="@style/IntroIconButtonLeft"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/intro_icon_button_right"
                    style="@style/IntroIconButtonRight"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>